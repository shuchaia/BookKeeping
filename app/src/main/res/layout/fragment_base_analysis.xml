<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".frag_analysis.BaseAnalysisFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="7dp">

                <!--这里放柱状图-->
                <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/analysis_barchart"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"/>
            </androidx.cardview.widget.CardView>

            <!--放文本数据-->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="7dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:orientation="vertical"
                                android:layout_alignParentLeft="true">

                            <TextView
                                    android:id="@+id/analysis_monthly_output"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7月支出(元)"
                                    android:layout_margin="5dp" />

                            <TextView
                                    android:id="@+id/analysis_monthly_output_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="5dp" />

                        </LinearLayout>

                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical"
                                android:layout_alignParentRight="true">

                            <TextView
                                    android:id="@+id/analysis_tv2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="日均支出(元)"
                                    android:layout_margin="5dp" />

                            <TextView
                                    android:id="@+id/analysis_daily_output_money"
                                    android:layout_below="@id/analysis_tv2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignRight="@+id/analysis_tv2"
                                    android:gravity="end"
                                    android:textStyle="bold"
                                    android:text="0.00"
                                    android:textSize="20sp"
                                    android:layout_marginRight="5dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:orientation="vertical"
                                android:layout_alignParentLeft="true">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="比上月支出(元)"
                                    android:layout_margin="5dp" />

                            <TextView
                                    android:id="@+id/analysis_compare_to_last_month"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="5dp" />

                        </LinearLayout>

                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical"
                                android:layout_alignParentRight="true">

                            <TextView
                                    android:id="@+id/analysis_tv1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="收支结余(元)"
                                    android:layout_margin="5dp" />

                            <TextView
                                    android:id="@+id/analysis_input_minus_output"
                                    android:layout_below="@+id/analysis_tv1"
                                    android:layout_alignRight="@+id/analysis_tv1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:textStyle="bold"
                                    android:text="0.00"
                                    android:textSize="20sp"
                                    android:layout_marginRight="5dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--放折线图-->
            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/analysis_linechart_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7月支出趋势"
                            android:padding="10dp" />

                    <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/analysis_linechart"
                            android:layout_width="match_parent"
                            android:layout_height="180dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--放饼图-->
            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                <TextView
                        android:id="@+id/analysis_piechart_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7月支出分类构成"
                        android:padding="10dp" />

                <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/analysis_piechart"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>