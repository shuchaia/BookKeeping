<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey_f3f3f3"
        tools:context=".AnalysisActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <ImageView
                android:id="@+id/analysis_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/it_back"
                android:onClick="onClick"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:text="@string/analysis"
                android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

        <TextView
                android:id="@+id/analysis_tv_select_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="2023年07月"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true" />

        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">

            <RadioButton
                    android:id="@+id/analysis_rb_outcome"
                    android:button="@null"
                    android:checked="true"
                    android:text="支出"
                    android:gravity="center"
                    android:background="@drawable/radio_btn_bg_selector"
                    android:textColor="@color/radio_btn_text_color_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="5dp"/>

            <RadioButton
                    android:id="@+id/analysis_rb_income"
                    android:button="@null"
                    android:text="收入"
                    android:gravity="center"
                    android:background="@drawable/radio_btn_bg_selector"
                    android:textColor="@color/radio_btn_text_color_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

        </RadioGroup>

    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="7dp">

                <!--这里放柱状图-->
                <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/analysis_barchart"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"/>
            </androidx.cardview.widget.CardView>

            <!--放文本数据-->
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="7dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:orientation="vertical"
                                android:layout_alignParentLeft="true">

                            <TextView
                                    android:id="@+id/analysis_monthly_output"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7月支出(元)"
                                    android:layout_margin="5dp" />

                            <TextView
                                    android:id="@+id/analysis_monthly_output_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="5dp" />

                        </LinearLayout>

                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical"
                                android:layout_alignParentRight="true">

                            <TextView
                                    android:id="@+id/analysis_tv2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="日均支出(元)"
                                    android:layout_margin="5dp" />

                            <TextView
                                    android:id="@+id/analysis_daily_output_money"
                                    android:layout_below="@id/analysis_tv2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignRight="@+id/analysis_tv2"
                                    android:gravity="end"
                                    android:textStyle="bold"
                                    android:text="0.00"
                                    android:textSize="20sp"
                                    android:layout_marginRight="5dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:orientation="vertical"
                                android:layout_alignParentLeft="true">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="比上月支出(元)"
                                    android:layout_margin="5dp" />

                            <TextView
                                    android:id="@+id/analysis_compare_to_last_month"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:textSize="20sp"
                                    android:layout_marginLeft="5dp" />

                        </LinearLayout>

                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical"
                                android:layout_alignParentRight="true">

                            <TextView
                                    android:id="@+id/analysis_tv1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="收支结余(元)"
                                    android:layout_margin="5dp" />

                            <TextView
                                    android:id="@+id/analysis_input_minus_output"
                                    android:layout_below="@+id/analysis_tv1"
                                    android:layout_alignRight="@+id/analysis_tv1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:textStyle="bold"
                                    android:text="0.00"
                                    android:textSize="20sp"
                                    android:layout_marginRight="5dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--放折线图-->
            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/analysis_linechart_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7月支出趋势"
                            android:padding="10dp" />

                    <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/analysis_linechart"
                            android:layout_width="match_parent"
                            android:layout_height="180dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--放饼图-->
            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                <TextView
                        android:id="@+id/analysis_piechart_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7月支出分类构成"
                        android:padding="10dp" />

                <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/analysis_piechart"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>